{
  "dashboard": {
    "id": null,
    "title": "MaraBet AI - Dashboard Principal",
    "tags": ["marabet", "betting", "ai"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ROI Atual",
        "type": "stat",
        "targets": [
          {
            "expr": "marabet_current_roi",
            "legendFormat": "{{bet_type}} - {{league}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.05},
                {"color": "green", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Taxa de Acerto",
        "type": "stat",
        "targets": [
          {
            "expr": "marabet_win_rate",
            "legendFormat": "{{bet_type}} - {{league}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.4},
                {"color": "green", "value": 0.6}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Total de Apostas",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(marabet_total_bets)",
            "legendFormat": "Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Lucro/Prejuízo Total",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(marabet_total_profit_loss)",
            "legendFormat": "Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 0}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Evolução do ROI",
        "type": "timeseries",
        "targets": [
          {
            "expr": "marabet_current_roi",
            "legendFormat": "{{bet_type}} - {{league}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Distribuição de Valores de Apostas",
        "type": "histogram",
        "targets": [
          {
            "expr": "marabet_bet_value_distribution",
            "legendFormat": "{{bet_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Distribuição de ROI",
        "type": "histogram",
        "targets": [
          {
            "expr": "marabet_roi_distribution",
            "legendFormat": "{{bet_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Apostas por Tipo",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (bet_type) (marabet_total_bets)",
            "legendFormat": "{{bet_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "Performance por Liga",
        "type": "table",
        "targets": [
          {
            "expr": "marabet_current_roi",
            "format": "table",
            "legendFormat": "{{league}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
