# Sistema Básico de Dados Esportivos - MaraBet AI
# Arquivo de configuração de ambiente - EXEMPLO
# Copie este arquivo para .env e configure suas chaves

# =============================================================================
# API KEYS (OPCIONAL - Sistema funciona sem elas)
# =============================================================================

# API-Football (RapidAPI)
# Obtenha sua chave em: https://rapidapi.com/api-sports/api/api-football
API_FOOTBALL_KEY=your_api_key_here
API_FOOTBALL_HOST=api-football-v1.p.rapidapi.com

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================

# URL do banco de dados (SQLite por padrão)
DATABASE_URL=sqlite:///data/sports_data.db

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================

# TTL do cache em segundos (1 hora = 3600)
CACHE_TTL=3600

# Tamanho máximo do cache
CACHE_MAX_SIZE=1000

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=logs/sports_system.log

# =============================================================================
# CONFIGURAÇÕES DE MACHINE LEARNING
# =============================================================================

# Diretório dos modelos
ML_MODEL_PATH=models/

# Dias para retreinar modelos
ML_RETRAIN_DAYS=7

# =============================================================================
# CONFIGURAÇÕES DE ANÁLISE
# =============================================================================

# Confiança mínima para recomendações (0.0 a 1.0)
MIN_CONFIDENCE=0.70

# Valor esperado mínimo (EV)
MIN_EV=0.05

# Fração do Kelly Criterion (0.0 a 1.0)
KELLY_FRACTION=0.25

# Número de jogos para análise de forma
FORM_GAMES=5

# Número de confrontos diretos para análise
H2H_GAMES=5

