# ============================================
# MARABET AI - CONFIGURAÇÃO SERVIDOR LOCAL
# ============================================
# Para qualquer VPS/Servidor Dedicado
# (Angoweb, DigitalOcean, Linode, Vultr, etc)
# 
# INSTRUÇÕES:
# 1. Copiar para .env
# 2. Preencher valores
# 3. NUNCA commitar .env!
# ============================================

# APLICAÇÃO
APP_NAME=MaraBet AI
APP_ENV=production
DEBUG=False
SECRET_KEY=GERAR_CHAVE_ALEATORIA_50_CARACTERES
TZ=Africa/Luanda

# DOMÍNIO
DOMAIN=seu-dominio.com
SITE_URL=https://seu-dominio.com
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com,IP_SERVIDOR

# BANCO DE DADOS POSTGRESQL (Local no VPS)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marabet
DB_USER=marabetuser
DB_PASSWORD=SENHA_POSTGRESQL_AQUI
DATABASE_URL=postgresql://marabetuser:SENHA@localhost:5432/marabet

# REDIS CACHE (Local no VPS)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SENHA_REDIS_AQUI
REDIS_DB=0
REDIS_URL=redis://:SENHA_REDIS@localhost:6379/0

# EMAIL (Configurar com seu provedor)
EMAIL_HOST=smtp.seu-provedor.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USER=admin@seu-dominio.com
EMAIL_PASSWORD=SENHA_EMAIL_AQUI
EMAIL_FROM=admin@seu-dominio.com

# API KEYS
API_FOOTBALL_KEY=SUA_CHAVE_API_FOOTBALL
TELEGRAM_BOT_TOKEN=SEU_TOKEN_TELEGRAM
TELEGRAM_CHAT_ID=SEU_CHAT_ID_TELEGRAM

# MOEDA E PAÍS
DEFAULT_CURRENCY=AOA
COUNTRY_CODE=+244

# BACKUP
BACKUP_DIR=/opt/marabet/backups
BACKUP_RETENTION_DAYS=30

# SEGURANÇA
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# CONTATOS
CONTACT_PHONE=+224932027393
CONTACT_EMAIL=suporte@seu-dominio.com

